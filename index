<?php

if ($conexion->connect_error) {
    echo "<tr><td colspan='5'>Error en la conexi칩n: " . htmlspecialchars($conexion->connect_error) . "</td></tr>";
    exit;
}

$sql = "SELECT producto, precio, detalles, img FROM menu ORDER BY producto ASC";
$resultado = $conexion->query($sql);

if ($resultado && $resultado->num_rows > 0) {
  while ($fila = $resultado->fetch_assoc()) {
    $producto = htmlspecialchars($fila['producto']);
    $precio = number_format(floatval($fila['precio']), 2);
    $detalles = htmlspecialchars($fila['detalles'] ?? '');
    $imgNombre = $fila['img'] ?? '';
    $rutaImg = "imagenes/" . $imgNombre;

    if ($imgNombre && file_exists($rutaImg)) {
        // A침adimos los atributos data-* necesarios
        $imgTag = "<img src='$rutaImg' alt='$producto' class='menu-img imgProducto' 
                    data-producto=\"$producto\" 
                    data-precio=\"$precio\" 
                    data-detalles=\"$detalles\" 
                    data-imagen=\"$rutaImg\">";
    } else {
        $imgTag = "<span>Sin imagen</span>";
    }

    echo "<tr id='tr1'>";
    echo "<td>$imgTag</td>";
    echo "<td>$producto</td>";
    echo "<td>$$precio</td>";
    echo "</tr>";

    echo "<tr>";
    echo "<td><button class='agregar-btn btnAgregar' data-producto=\"$producto\" data-precio=\"" . floatval($fila['precio']) . "\">Agregar</button></td>";
    echo "</tr>";
}


$conexion->close();
}
?>
    </tbody>
  </table>
</div>

